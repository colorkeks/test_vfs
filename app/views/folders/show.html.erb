<div class="row">
  <div class="col-lg-12">
    <div class="col-lg-6">
      <!-- TODO REFACTOR-->
      <% folders = @folder.self_and_descendants %>
      <% size = folders.collect {|h| h[:size] }.inject(:+)  %>
      <% folders.each do |folder| %>
          <% size += folder.data_files.collect{|h| h[:size] }.inject(:+) || 0 %>
      <% end %>
      <h2><%= @folder.name %></h2>
      <!-- TODO сделать байты и добавить гем Russian-->
      <h4><%= size %> байт, <%= @folder.children.count %> папок,  <%= @folder.data_files.count %> файлов</h4>
    </div>
    <div class="col-lg-6">
      <% if @folder.id != @root_id %>
        <div class="icons trash_blue folder destroy" style="float: right; margin-top: 20px; margin-bottom: 10px" data-id=<%= @folder.id %>></div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-6">
      <div class="icons-group new_folder" data-id=<%= @folder.id %>>
        <div class="icons folder_orange"></div>
        <div>Создать папку</div>
      </div>
  </div>
  <div class="col-lg-6 new_data_file"  data-id=<%= @folder.id %>>
    <div class="icons-group">
      <div class="icons file_blue"></div>
      <div>Создать файл</div>
    </div>
  </div>
</div>
