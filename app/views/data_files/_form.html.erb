<%= form_for(@data_file) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
    <div class="field">
      <%= f.label :text %>
      <%= f.text_area :text, class: 'form-control' %>
    </div>
    <%= f.hidden_field :folder_id%>
  <div class="actions">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
