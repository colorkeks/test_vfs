<div class="row">
  <%= form_for @data_file  do |f| %>
    <div class="col-lg-12 file_container">
      <div class="col-lg-12">
        <%= f.text_field :name, class: 'form-control string' %>
          <div class="icons trash_blue data_file destroy" style="float: right; margin: 20px 5px 10px 5px;" data-id=<%= @data_file.id %>></div>
          <div class="icons save_blue save" style="float: right; margin: 22px 5px 10px 5px;"></div>
      </div>
      <div class="col-lg-12 textarea_container">
        <%= f.text_area :text, class: 'form-control' %>
      </div>
    </div>
  <% end %>
</div>
